@page
@model WebApp.Pages.Game.LoadModel


@{
    ViewData["Title"] = "Load";
}

<h1>Load a saved game</h1>

<hr/>

@{
    if (Model.SaveGames.Count == 0) {
        <button type="button" class="btn btn-lg btn-block btn-danger" disabled>No saved games yet!</button>
    } else {
        <form method="post">
            <table class="table  table-hover">
                @foreach (var saveGame in Model.SaveGames) {
                    <tr>
                        <div class="form-group">
                            <input type="submit" value=@saveGame asp-route-saveName="@saveGame" class="btn btn-primary btn-lg btn-block"/>
                        </div>
                    </tr>
                }
            </table>
        </form>
    }
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}